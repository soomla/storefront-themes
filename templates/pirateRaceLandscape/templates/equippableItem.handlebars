<div class="content" data-categoryid="{{categoryId}}" style="background-image: url({{backgroundImgFilePath}})">
  <div class="row">
    <div class="description">
      <label style="{{descriptionStyle}}">{{description}}</label>
    </div>
  </div>
  <div class="row balanceRow">
    <img class="visual" src="{{imgFilePath}}" />
  </div>
  <div class="row price">
    <label style="{{priceStyle}}">{{price}}</label>
    <img src="{{currency.imgFilePath}}" class="currency" />
    <a class="buy">
      <img src="{{buyOnce}}" />
    </a>
    <a class="equip">
      <img src="{{equip}}" />
    </a>
    <span class="active">
      <img src="{{active}}" />
    </span>
  </div>
</div>