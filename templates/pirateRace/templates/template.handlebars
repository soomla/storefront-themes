{{fontFaceStylesheet fonts}}
<div id="store-wrapper" data-role="page">
    <div class="content">
        <div class="header">
            <img class="title-image" src="{{common.titleImage}}">
            <div class="balance-container font-face-2">
	            {{#each currencies}}
                <div class="label-container">
                    <img class="currency" src="{{this.imgFilePath}}">
                    <label>{{this.balance}}</label>
                </div>
	            {{/each}}
            </div>
        </div>
        <div class="items-container" id="goods-store">
	        <div data-iscroll="true">
	        </div>
        </div>
        <div class="items-container" id="currency-store">
            <div data-iscroll="true">
                <div class="currency-packs">
                </div>
                <div class="non-consumables">
                </div>
                <div id="restore-purchases">
                </div>
            </div>
        </div>
        <div class="footer">
            <a class="btn1"><img src="{{common.moreCurrencyButton}}" class="currency buy-more"></a>
            <a class="btn2"><img src="{{common.backButton}}" class="leave-store"></a>

            <a class="btn3"><img src="{{common.backButton}}" class="back"></a>
        </div>
    </div>
</div>

