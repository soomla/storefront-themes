{{fontFaceStylesheet fonts}}
<div id="content-container">
    <div id="header" class="font-face-1">
        <div id="title-container">
            <a id="quit">
                <img src="{{images.quit}}">
            </a>
            <h1 id="title"></h1>
        </div>
        <div id="balance-container">
		    {{#each currencies}}
                <div class="label-container">
                    <label data-currency="{{this.itemId}}">{{this.balance}}</label>
                    <img class="currency" src="{{this.imgFilePath}}">
                </div>
		    {{/each}}
        </div>
    </div>

    <div id="categories" class="font-face-2"><div></div></div>
    <div id="footer">
	    <div id="menus-container" class="clearfix">
            <ul id="category-menu"></ul>
            <ul id="currency-menu"></ul>
	    </div>
    </div>
</div>
